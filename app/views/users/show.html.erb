<h1>User info</h1>

  <%= image_tag @user.get_profile_image(100,100) %>
<div>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
  <% if @user == current_user %>
    <p><%= link_to "edit", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <%= link_to @user.name, book_path(book.id) %>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>