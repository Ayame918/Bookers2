 <%#users/show.html.erb%>
<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'user_info', user: @user, book: @book %>
      <%= render 'books/book_new', book: @book %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <table class ="table table-hover table-inverse">
        <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
         <tbody>
           <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= image_tag @user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
