<p><%= flash[:notice] %></p>
<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'users/list' %>
      <%= render 'books/list' %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <table class ="table table-hover table-inverse">
        <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
         <tbody>
           <% @books.each do |book| %>
              <tr>
                <td>
                    <%= image_tag @user.get_profile_image(100,100) %>
                </td>
                <td><%= link_to book.title, books_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>


