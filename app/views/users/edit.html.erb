<p></p>
<div class ="container">
  <div class ="row">
    <div class =" mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div>
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id: "inputName",style: "width:100%" %>
        </div>
      
        <div>
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
      
        <div>
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_area :introduction, id: "inputIntroduction",style: "width:100%" %>
        </div>
      
        <div class ="row">
          <div class ="col-5">
            <div class="actions">
              <%= f.submit "Update User", class: 'btn btn-primary btn-block btn-sm btn-secondary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

  
  

  

  
