
<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'users/user_info', user: @user, book: @book %>
      <%= render 'book_new', book: @book %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table table-hover table-inverse">
        <thead></thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%=link_to @book.user.name, user_path(@user) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "本当に削除しますか？" } %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

