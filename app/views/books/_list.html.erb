 <%= form_with model: @book do |f| %>
    
      <h2>New book</h2>
      <div class="form-group">
        <label>Title</label><br>
        <%= f.text_field :title, style: "width:100%" %>
      </div>
    
      <div class="form-group">
        <label>Opinion</label><br>
        <%= f.text_area :body, style: "width:100%" %>
      </div>
     
      <div class ="row">
          <div class ="col-7">
            <div class="actions">
              <%= f.submit 'Create Book', class: 'btn btn-success btn-block btn-sm btn-secondary' %>
            </div>
          </div>
      </div>
    <% end %>
    
